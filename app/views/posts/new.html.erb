<% provide :title, "Create new post" %>

<div class="row">
  <div class="span12">

    <h1 class="page-header">Create new post</h1>

    <%= form_for @post do |f| %>

      <%= render "shared/error_messages", :object => f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :body %>
      <%= f.text_area :body %>

      <br/>
      <%= f.submit "Create new post",
        :class => "btn btn-large btn-primary btn-left" %>

    <% end %>
    <%= button_to "Back to posts", posts_path,
      :class => "btn btn-large btn-danger btn-posts-back btn-left", :method => :get %>
  </div>
</div>
