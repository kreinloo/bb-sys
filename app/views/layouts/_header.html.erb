<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
      <div class="container">
      <a class="btn btn-navbar" data-target=".nav-collapse"
        data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="/">BB-SYS</a>
      <div class="container nav-collapse">
        <ul class="nav">

            <li class="divider-vertical"></li>
            <li>
              <%= link_to root_path do %>
              <i class="icon-home icon-white"></i> Home
              <% end %>
            </li>

            <li class="divider-vertical"></li>
            <li>
              <%= link_to posts_path do %>
              <i class="icon-list icon-white"></i> Posts
              <% end %>
            </li>

        </ul>

        <ul class="nav pull-right">
        <% if signed_in? %>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="icon-user icon-white"></i> Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to current_user do %>
                <i class="icon-user"></i> Profile<% end %>
              </li>
              <li><%= link_to edit_user_path(current_user) do %>
                <i class="icon-cog"></i> Settings<% end %>
              </li>
              <li class="divider"></li>
              <li><%= link_to signout_path, { method: "delete" } do %>
                <i class="icon-off"></i> Sign out<% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign in", signin_path %></li>
          <li class="divider-vertical"></li>
          <li><%= link_to "Sign up", signup_path %></li>
        </ul>
        <% end %>
      </div><!--/.nav-collapse -->
